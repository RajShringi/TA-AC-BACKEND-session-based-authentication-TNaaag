<!DOCTYPE html>
<html>
  <head>
    <title>Ekart</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body class="text-gray-600">
    <% include partials/header %>
    <main>
      <div class="container mx-auto">
        <div class="flex justify-around items-center">
          <div class="basis-2/5">
            <img src="<%=product.image%>" alt="" />
          </div>
          <div class="basis-2/5">
            <p class="text-4xl font-bold mb-4"><%= product.name %></p>
            <p class="text-gray-800 text-xl mb-4">â‚¹<%=product.price%></p>
            <p class="mb-8">
              Likes <span class="text-red-500"><%=product.likes %></span>
            </p>
            <div class="mb-8">
              <div class="mb-8">
                <a
                  href="/products/<%=product.id%>/edit"
                  class="inline-block mr-8 bg-indigo-500 text-white px-4 py-2 rounded-sm"
                  >Edit</a
                >
                <a
                  href="/products/<%=product.id%>/delete"
                  class="inline-block mr-8 bg-indigo-500 text-white px-4 py-2 rounded-sm"
                  >Delete</a
                >
                <a
                  href="/products/<%=product.id%>/like"
                  class="inline-block mr-8 bg-indigo-500 text-white px-4 py-2 rounded-sm"
                  >Like</a
                >
              </div>

              <div>
                <a
                  href="/products/<%=product.id%>/cart"
                  class="inline-blockmr-8 bg-indigo-500 text-white px-4 py-2 rounded-sm"
                  >Add To Cart</a
                >
              </div>
            </div>
          </div>
        </div>
        <div class="mt-12">
          <div>
            <form action="/products/<%=product.id%>/comments" method="post">
              <textarea
                name="text"
                cols="30"
                rows="10"
                class="block py-4 px-2 rounded-md my-4 w-full border"
                placeholder="Comment"
              ></textarea>
              <input
                type="submit"
                value="Add Comment"
                class="block mx-auto bg-indigo-500 text-white px-4 py-2 rounded-sm cursor-pointer"
              />
            </form>
          </div>
          <h3 class="text-2xl border-b mb-4">Comments</h3>
          <% product.comments.forEach(comment => { %>
          <div class="shadow-md mb-8 rounded p-4">
            <p class="text-xl mb-4"><%= comment.text %></p>
          </div>
          <% }) %>
        </div>
      </div>
    </main>
  </body>
</html>
